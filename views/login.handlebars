<section class="login-page">
    <!-- The heading of the login form -->
    <div class="form-heading">
        <h1>Log In</h1>
    </div>
    <div class="form-section">
        <!-- The login form -->
        <form class="login-form">
            <div>
                <label for="email-login">Email:</label>
                <input type="email" class="entry-field" id="email-login" />
            </div>
            <div>
                <label for="username-login">Username:</label>
                <input type="text" class="entry-field" id="username-login" />
            </div>
            <div>
                <label for="password-login">Password:</label>
                <input type="password" class="entry-field" id="password-login" />
            </div>
            <div>
                <!-- The submit button for the login form -->
                <button type="submit" class="login-signup-btn">Log In!</button>
            </div>
        </form>
    </div>

    <!-- A link to the signup page if the user needs to sign up instead -->
    <a href="/signup" class="sign-in-link">Need to sign up instead??</a>
</section>

<!-- The login.js script file -->
<script src="/js/login.js"></script>
