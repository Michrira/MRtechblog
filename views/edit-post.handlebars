
<!-- Renders a link to go back to the dashboard page -->
<a href="/dashboard" class="go-back"> ‚Üê Back to dashboard</a>

<!-- Renders a form to edit a post with fields for title and content, and buttons to update or delete the post -->
<article class="new-page">
    <section class="edit-form-page">
        <div class="form-heading">
            <h2>
                Edit the Post
            </h2>
        </div>
        <div class="form-section">
            <form class="edit-post-form">
                <div class="post-title-section">
                    <label for="post-title">Title</label>
                    <input type="text" name="post-title" id="post-title" value="{{post.title}}" />
                </div>
                <div class="post-content">
                    <label for="post-content">Content</label>
                    <textarea class="entry-field" id="post-content" name="post-content">{{post.content}}</textarea>
                </div>
                <button type="submit">Update post</button>
                <button type="button" class="delete-post-btn">Delete the post</button>
            </form>
        </div>
    </section>
</article>
<!-- Only includes scripts for editing and deleting posts if the user is logged in -->
{{#if loggedIn}}

<script src="/js/editpost.js"></script>
<script src="/js/deletepost.js"></script>
{{/if}}